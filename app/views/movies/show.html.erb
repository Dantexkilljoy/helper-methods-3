<div>
  <div>
    <h1>
      Movie #<%= @movie.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", movies_path %>
      </div>

      <div>
        <%= link_to "Edit Movie", edit_movie_path(@movie) %>
      </div>
    </div>

  
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @movie.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= @movie.description %></h6>
        <p class="card-text"><%= time_ago_in_words(@movie.created_at) %> ago</p>
        <%= link_to @movie, method: :delete, class: "btn btn-outline-secondary" do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
